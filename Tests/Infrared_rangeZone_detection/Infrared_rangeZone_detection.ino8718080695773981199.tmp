/*
 * Distance range is from 0 to 5.  Only a small range of several centimeters  
 * in front of each detector is measureable.  Most of it will be 0 (too 
 * close) or 5 (too far).
 */

int irLEDPin = 3;
int irRecPin = 2;

void setup()                                 // Built-in initialization block
{
  Serial.println("BooBoo initiated!"); 
  tone(4, 2000,500);
  delay(1000);
  tone(4, 2000, 500);                              // Delay to finish tone

  pinMode(irRecPin, INPUT);  pinMode(irLEDPin, OUTPUT);   // IR LED & Receiver
  
  Serial.begin(9600);                        // Set data rate to 9600 bps
}  
 
